<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroundone"
    android:clickable="true"
    android:backgroundTint="#423357"
    android:padding="8dp"
    android:layout_margin="10dp"
    >

    <TextView
        android:id="@+id/oneD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task name"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:maxLines="1"
        android:textSize="20sp"
        android:padding="5dp">

    </TextView>

    <TextView
        android:id="@+id/twoD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="task description"
        android:layout_below="@+id/oneD"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="#E2E4ED"
        android:textSize="18sp"
        android:padding="5dp"/>



    <LinearLayout
        android:layout_below="@+id/twoD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_date"
            />

        <TextView
            android:id="@+id/threeD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="hello"
            android:textColor="#E2E4ED"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/removeList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/backgroundone"
        android:backgroundTint="#A14A43"
        android:contextClickable="true"
        android:padding="5dp"
        android:src="@drawable/ic_check" />

    <ImageButton
        android:id="@+id/redoList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/backgroundone"
        android:backgroundTint="#7E53CA"
        android:contextClickable="true"
        android:padding="5dp"
        android:src="@drawable/ic_check" />


</RelativeLayout>